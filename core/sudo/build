#!/bin/sh -uxe

./configure \
	--prefix=/usr \
	--sbindir=/usr/bin \
	--libexecdir=/usr/lib \
	--with-rundir=/var/run/sudo \
	--with-vardir=/var/db/sudo \
	--with-logfac=auth \
	--enable-tmpfiles.d \
	--with-pam \
	--with-sssd \
	--with-ldap \
	--with-env-editor \
    --with-passprompt="[sudo] password for %p: " \
	--with-all-insults

make
make DESTDIR="$1" install

install -Dm644 sudo.pam "$1/etc/pam.d/sudo"
