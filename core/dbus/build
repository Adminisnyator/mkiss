#!/bin/sh -uxe

./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--with-system-socket=/var/run/dbus/system_bus_socket \
	--with-system-pid-file=/var/run/dbus/pid \
	--with-console-auth-dir=/var/run/console \
    --enable-elogind \
	--enable-assert \
	--enable-doxygen-docs \
	--enable-inotify \
	--enable-user-session \
	--enable-x11-autolaunch

make
make DESTDIR="$1" install

ln -s /var/lib/dbus/machine-id "$1/etc"
rm -rf "$1/usr/lib/systemd"
